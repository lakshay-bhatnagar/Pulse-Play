<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_mode"
    tools:context="ui.profile.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:text="Hello, "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/user_name"
                android:textSize="35sp"
                android:text="@string/user_name_profile_page"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/card_color"
                app:cardElevation="8dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/card_color">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_local_fire_department_24"
                        app:tint="@color/white"
                        android:id="@+id/calories_profile_icon"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="13dp"
                        android:layout_marginStart="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mycalories_profile"
                        android:text="My Calories"
                        android:textSize="18sp"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:textColor="@color/white"
                        android:layout_alignStart="@id/calories_profile_icon"
                        android:layout_alignTop="@id/calories_profile_icon"
                        android:layout_marginStart="60dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/arrow_profile_icon"
                        android:src="@drawable/arrow_right_1_svgrepo_com"
                        app:tint="@color/white"
                        android:layout_alignTop="@id/calories_profile_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="30dp"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/card_color"
                app:cardElevation="8dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/card_color">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pay_svgrepo_com"
                        app:tint="@color/white"
                        android:id="@+id/subscription_profile_icon"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="13dp"
                        android:layout_marginStart="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/subscription_profile"
                        android:text="My Subscriptions"
                        android:textSize="18sp"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:textColor="@color/white"
                        android:layout_alignStart="@id/subscription_profile_icon"
                        android:layout_alignTop="@id/subscription_profile_icon"
                        android:layout_marginStart="60dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/arrow_profile_subscription_icon"
                        android:src="@drawable/arrow_right_1_svgrepo_com"
                        app:tint="@color/white"
                        android:layout_alignTop="@id/subscription_profile_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="30dp"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>