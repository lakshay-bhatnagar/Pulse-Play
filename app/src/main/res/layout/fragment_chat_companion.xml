<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ChatCompanionFragment">

    <RelativeLayout
        android:id="@+id/chatLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_mode">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/small_text"
            android:fontFamily="@font/sf_pro_display_bold"
            android:text="Chat with companion"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/inputEditBoxChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_view_bg"
            android:minHeight="40dp"
            android:textColor="@color/dark_mode"
            android:hint="Chat with companion..."
            android:fontFamily="@font/sf_pro_display_regular"
            android:textColorHint="@color/small_text"
            android:paddingStart="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="70dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/inputEditBoxChat"
            android:layout_alignParentBottom="true"
            android:src="@drawable/send_alt_1_svgrepo_com"
            android:backgroundTint="@color/white"
            app:tint="@color/dark_mode"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="20dp" />

    </RelativeLayout>

</FrameLayout>